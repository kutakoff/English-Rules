<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Present_ContinuousActivity">

    <ViewFlipper
        android:id="@+id/viewflipper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:layout_marginStart="315dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="5dp"
                android:text="1/3"
                android:textColor="#000000"
                android:textSize="35sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_back"
                android:layout_width="85dp"
                android:layout_height="47dp"
                android:layout_marginTop="-74dp"
                android:background="@drawable/buttonback1_1" />


            <ImageView
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_marginTop="550dp"
                android:layout_marginStart="85dp"
                android:layout_marginLeft="150dp"
                android:background="@drawable/swipe"/>

            <ImageView
                android:layout_width="400dp"
                android:layout_height="550dp"
                android:layout_marginTop="-680dp"
                android:layout_marginStart="-2dp"
                android:layout_marginLeft="150dp"
                android:background="@drawable/present_continuous_1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:layout_marginStart="315dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="5dp"
                android:text="3/3"
                android:textColor="#000000"
                android:textSize="35sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="370dp"
                android:layout_height="680dp"
                android:layout_marginTop="-0dp"
                android:layout_marginStart="19dp"
                android:layout_marginLeft="150dp"
                android:background="@drawable/present_continuous_3"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:layout_marginStart="315dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="5dp"
                android:text="2/3"
                android:textColor="#000000"
                android:textSize="35sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="400dp"
                android:layout_height="555dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="150dp"
                android:background="@drawable/present_continuous_2"/>

        </LinearLayout>

</ViewFlipper>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".past.Past_SimpleActivity">

    <ViewFlipper
        android:id="@+id/viewflipper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:gravity="center"
                android:layout_marginStart="360dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="-20dp"
                android:text="1/4"
                android:textColor="#000000"
                android:textSize="65sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_back1"
                android:layout_width="173dp"
                android:layout_height="95dp"
                android:layout_marginTop="-150dp"
                android:background="@drawable/buttonback1_1" />

            <ImageView
                android:layout_width="400dp"
                android:layout_height="230dp"
                android:layout_marginTop="883dp"
                android:layout_marginStart="250dp"
                android:layout_marginLeft="160dp"
                android:background="@drawable/swipe"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="910dp"
                android:layout_marginTop="-1100dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/past_simple_1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:gravity="center"
                android:layout_marginStart="360dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="-20dp"
                android:text="4/4"
                android:textColor="#000000"
                android:textSize="65sp"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="1240dp"
                android:layout_marginTop="-60dp"
                android:layout_marginStart="31dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/past_simple_4" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:gravity="center"
                android:layout_marginStart="360dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="-20dp"
                android:text="3/4"
                android:textColor="#000000"
                android:textSize="65sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="940dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="23dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/past_simple_3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:gravity="center"
                android:layout_marginStart="360dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="-20dp"
                android:text="2/4"
                android:textColor="#000000"
                android:textSize="65sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button"
                android:layout_width="173dp"
                android:layout_height="95dp"
                android:layout_marginTop="-1705dp"
                android:background="@drawable/buttonback1_1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="940dp"
                android:layout_marginTop="1610dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/past_simple_2" />

        </LinearLayout>

    </ViewFlipper>

</RelativeLayout>
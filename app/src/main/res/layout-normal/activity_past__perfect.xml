<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".past.Past_PerfectActivity">

    <ViewFlipper
        android:id="@+id/viewflipper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:layout_marginStart="180dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="0dp"
                android:text="1/2"
                android:textColor="#000000"
                android:textSize="35sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_back1"
                android:layout_width="85dp"
                android:layout_height="47dp"
                android:layout_marginTop="-70dp"
                android:background="@drawable/buttonback1_1" />

            <ImageView
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_marginTop="545dp"
                android:layout_marginStart="80dp"
                android:layout_marginLeft="150dp"
                android:background="@drawable/swipe"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="545dp"
                android:layout_marginTop="-679dp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/past_perfect_1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:layout_marginStart="180dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="5dp"
                android:text="2/2"
                android:textColor="#000000"
                android:textSize="35sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="550dp"
                android:layout_marginTop="55dp"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/past_perfect_2" />

        </LinearLayout>

    </ViewFlipper>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Present_SimpleActivity">

    <ViewFlipper
        android:id="@+id/viewflipper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:gravity="center"
                android:layout_marginStart="470dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="-10dp"
                android:text="1/2"
                android:textColor="#000000"
                android:textSize="48sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_back1"
                android:layout_width="123dp"
                android:layout_height="75dp"
                android:layout_marginTop="-130dp"
                android:background="@drawable/buttonback1_1" />

            <ImageView
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_marginTop="630dp"
                android:layout_marginStart="125dp"
                android:layout_marginLeft="150dp"
                android:background="@drawable/swipe"/>

            <ImageView
                android:layout_width="540dp"
                android:layout_height="630dp"
                android:layout_marginTop="-800dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/present_simple_1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:gravity="center"
                android:layout_marginStart="470dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="0dp"
                android:text="2/2"
                android:textColor="#000000"
                android:textSize="48sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/present_simple_2" />

        </LinearLayout>

    </ViewFlipper>

</RelativeLayout>
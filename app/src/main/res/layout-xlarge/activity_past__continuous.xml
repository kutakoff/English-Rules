<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Past_ContinuousActivity">

    <ViewFlipper
        android:id="@+id/viewflipper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FFFFFF"
            android:orientation="vertical">
            <TextView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:gravity="center"
                android:layout_marginStart="360dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="-20dp"
                android:text="1/3"
                android:textColor="#000000"
                android:textSize="65sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_back1"
                android:layout_width="173dp"
                android:layout_height="95dp"
                android:layout_marginTop="-150dp"
                android:background="@drawable/buttonback1_1" />

            <ImageView
                android:layout_width="400dp"
                android:layout_height="230dp"
                android:layout_marginTop="875dp"
                android:layout_marginStart="255dp"
                android:layout_marginLeft="160dp"
                android:background="@drawable/swipe"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="850dp"
                android:layout_marginTop="-1067dp"
                android:layout_marginStart="37dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/past_continuous_1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FFFFFF"
            android:orientation="vertical">
            <TextView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:gravity="center"
                android:layout_marginStart="360dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="-20dp"
                android:text="3/3"
                android:textColor="#000000"
                android:textSize="65sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_back"
                android:layout_width="173dp"
                android:layout_height="95dp"
                android:layout_marginTop="-1705dp"
                android:background="@drawable/buttonback1_1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="1180dp"
                android:layout_marginTop="1560dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/past_continuous_3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:gravity="center"
                android:layout_marginStart="360dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="-20dp"
                android:text="2/3"
                android:textColor="#000000"
                android:textSize="65sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button"
                android:layout_width="173dp"
                android:layout_height="95dp"
                android:layout_marginTop="-1705dp"
                android:background="@drawable/buttonback1_1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="1010dp"
                android:layout_marginTop="1610dp"
                android:layout_marginStart="22dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/past_continuous_2" />

        </LinearLayout>

    </ViewFlipper>

</RelativeLayout>